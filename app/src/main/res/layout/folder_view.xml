<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/folderViewImg"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_folder"
        android:scaleType="center"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/folderTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/folderViewImg"
        app:layout_constraintStart_toStartOf="@+id/folderViewImg"
        app:layout_constraintTop_toBottomOf="@+id/folderViewImg" />


</androidx.constraintlayout.widget.ConstraintLayout>